{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components": ["source/components"],
      "@components/*": ["source/components/*"],
      "@assets": ["source/assets"],
      "@assets/*": ["source/assets/*"],
      "@constants": ["source/constants"],
      "@constants/*": ["source/constants/*"],
      "@styles": ["source/styles"],
      "@styles/*": ["source/styles/*"],
      "@utils": ["source/utils"],
      "@utils/*": ["source/utils/*"],
      "@services": ["source/services"],
      "@services/*": ["source/services/*"],
      "@hooks": ["source/hooks"],
      "@hooks/*": ["source/hooks/*"],
      "@redux": ["source/redux"],
      "@redux/*": ["source/redux/*"],
      "@background": ["source/Background"],
      "@background/*": ["source/Background/*"],
      "@modules/*": ["source/Modules/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
