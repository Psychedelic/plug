{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@ui": ["source/ui"],
      "@ui/*": ["source/ui/*"],
      "@components": ["source/components"],
      "@components/*": ["source/components/*"],
      "@assets": ["source/assets"],
      "@assets/*": ["source/assets/*"],
      "@shared": ["source/shared"],
      "@shared/*": ["source/shared/*"],
      "@hooks": ["source/hooks"],
      "@hooks/*": ["source/hooks/*"],
      "@redux": ["source/redux"],
      "@redux/*": ["source/redux/*"],
      "@background": ["source/background"],
      "@background/*": ["source/background/*"],
      "@modules/*": ["source/Modules/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
